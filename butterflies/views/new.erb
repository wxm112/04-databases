<h2>New butterfly</h2>

<form action="/butterflies" method="post">
  <label for="name">Name:</label>
  <input id="name" name="name">

  <label for="family">Family:</label>
  <input id="family" name="family">

  <label for="image">Image:</label>
  <input id="image" name="image" type="url">

  <label for="plant_id">Larval plant: </label>
  <select name="plant_id" id="plant_id">
      <% Plant.all.each do |plant|%>
        <option <%= "selected" if plant.id== @butterfly.plant_id%> value="<%=plant.id%>"><%= plant.name %></option>
      <% end %>
  </select>

  <input type="submit" value="Create butterfly">
</form>