<h2>Edit video</h2>

<form action="/videos/<%= @video["id"] %>" method="post">
  <label for="title">Title:</label>
  <input id="title" name="title" value="<%= @video["title"] %>">

  <label for="description">Description:</label>
  <input id="description" name="description" value="<%= @video["description"] %>">

  <label for="url">URL:</label>
  <input id="url" name="url" type="url" value="<%= @video["url"] %>">

  <label for="genre">Genre:</label>
  <input id="genre" name="genre" type="genre" value="<%= @video["genre"] %>">


  <input type="submit" value="Update video">
</form>
